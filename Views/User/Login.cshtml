
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/assets/css/login.css" rel="stylesheet">
</head>
<body>
    <div class="login-box">
        <div class="login-header">
            <header>Login</header>
        </div>
        <div class="input-box">
            <input type="text" class="input-field" placeholder="Email" autocomplete="off" required id="email">
            <input type="password" class="input-field" placeholder="Password" autocomplete="off" required id="pass">
        </div>
        <br>
        <div class="forgot">
            <section>
                <input type="checkbox" name="" id="check">
                <label for="check">Remember me</label>
            </section>
            <section>
                <a href="~/User/Forgotpass">Forgot Password</a>
            </section>
        </div>
        <div class="input-submit">
            <button class="submit-button" id="submit" onclick="return checkform()"></button>
            <label for="submit">Sign In</label>
        </div>
        <div class="signup">
            <p>Don't have account? <a href="~/User/Register">Sign Up</a></p>
        </div>
    </div>
</body>
</html>